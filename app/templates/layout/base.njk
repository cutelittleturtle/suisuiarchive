<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="utf-8">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block documentTitle %}{% endblock %}</title>
  <link href="{{ config.fonts_api[config.fonts_api.active] }}Monda:400,700|PT+Mono:300,300italic,400,400italic,700,700italic" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="/assets/css/main.css">
</head>

<body class="{% block pageName %}{% endblock %}">
  {% include '../partials/browser-upgrade.njk' %}

  <header>
    {% block header %}
      {% include '../partials/menu.njk' %}
    {% endblock %}
  </header>

  <main>
    {% block main %}{% endblock %}
  </main>

  {% block footer %}
    {% include '../partials/footer.njk' %}
  {% endblock %}

  {% block scripts %}
    <script src="/assets/js/main.js"></script>
  {% endblock %}

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
